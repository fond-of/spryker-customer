<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\Sales\Persistence" package="src.Orm.Zed.Sales.Persistence">

    <table name="spy_sales_order_address" phpName="SpySalesOrderAddress">
        <column name="salutation" type="ENUM" valueSet="Mr, Mrs, Dr, Ms, Diverse"/>
    </table>

    <table name="spy_sales_order_address_history" phpName="SpySalesOrderAddressHistory">
        <column name="salutation" type="ENUM" valueSet="Mr, Mrs, Dr, Ms, Diverse"/>
    </table>

    <table name="spy_sales_order" phpName="SpySalesOrder">
        <column name="salutation" type="ENUM" valueSet="Mr, Mrs, Dr, Ms, Diverse" required="false"/>
        <column name="gender" type="ENUM" valueSet="Male, Female, Diverse" required="false"/>
    </table>
</database>
